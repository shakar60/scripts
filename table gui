-- Create the ScreenGui and its child elements
local G2L = {}
G2L["1"] = Instance.new("ScreenGui", game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"))

-- Main Frame
G2L["2"] = Instance.new("Frame", G2L["1"])
G2L["2"].BorderSizePixel = 0
G2L["2"].BackgroundColor3 = Color3.fromRGB(30, 30, 30)
G2L["2"].AnchorPoint = Vector2.new(0.5, 0.5)
G2L["2"].BackgroundTransparency = 0.4
G2L["2"].Size = UDim2.new(0, 300, 0, 220)
G2L["2"].Position = UDim2.new(0.5, 0, 0.5, 0)
G2L["2"].Name = "MainFrame"
G2L["2"].Draggable = true -- Enable dragging

-- Left Tab Buttons
G2L["3"] = Instance.new("Frame", G2L["2"])
G2L["3"].BorderSizePixel = 0
G2L["3"].BackgroundColor3 = Color3.fromRGB(30, 30, 30)
G2L["3"].AnchorPoint = Vector2.new(0.5, 0.5)
G2L["3"].BackgroundTransparency = 0.4
G2L["3"].Size = UDim2.new(0, 100, 0, 220)
G2L["3"].Position = UDim2.new(-0.25, 0, 0.5, 0) -- Adjusted position
G2L["3"].Name = "TabButtons"

-- Top Tab Headers
G2L["4"] = Instance.new("Frame", G2L["2"])
G2L["4"].BorderSizePixel = 0
G2L["4"].BackgroundColor3 = Color3.fromRGB(20, 20, 20)
G2L["4"].AnchorPoint = Vector2.new(0.5, 0.5)
G2L["4"].BackgroundTransparency = 0.4
G2L["4"].Size = UDim2.new(1, -100, 0, 35) -- Adjusted size
G2L["4"].Position = UDim2.new(0.5, 0, 0, 0) -- Centered header
G2L["4"].Name = "TabHeaders"

-- Content Frames
G2L["5"] = Instance.new("Frame", G2L["2"])
G2L["5"].BorderSizePixel = 0
G2L["5"].BackgroundColor3 = Color3.fromRGB(20, 20, 20)
G2L["5"].AnchorPoint = Vector2.new(0.5, 0.5)
G2L["5"].BackgroundTransparency = 1
G2L["5"].Size = UDim2.new(1, -100, 1, -35) -- Adjusted size
G2L["5"].Position = UDim2.new(0.5, 0, 0.5, 0)
G2L["5"].Name = "HomeContent"

G2L["6"] = Instance.new("Frame", G2L["2"])
G2L["6"].BorderSizePixel = 0
G2L["6"].BackgroundColor3 = Color3.fromRGB(20, 20, 20)
G2L["6"].AnchorPoint = Vector2.new(0.5, 0.5)
G2L["6"].BackgroundTransparency = 1
G2L["6"].Size = UDim2.new(1, -100, 1, -35)
G2L["6"].Position = UDim2.new(0.5, 0, 0.5, 0)
G2L["6"].Name = "ScriptsContent"
G2L["6"].Visible = false

G2L["7"] = Instance.new("Frame", G2L["2"])
G2L["7"].BorderSizePixel = 0
G2L["7"].BackgroundColor3 = Color3.fromRGB(20, 20, 20)
G2L["7"].AnchorPoint = Vector2.new(0.5, 0.5)
G2L["7"].BackgroundTransparency = 1
G2L["7"].Size = UDim2.new(1, -100, 1, -35)
G2L["7"].Position = UDim2.new(0.5, 0, 0.5, 0)
G2L["7"].Name = "CreditsContent"
G2L["7"].Visible = false

-- Tab Buttons
G2L["9"] = Instance.new("TextButton", G2L["3"])
G2L["9"].BorderSizePixel = 0
G2L["9"].BackgroundColor3 = Color3.fromRGB(30, 30, 30)
