G2L["11"].TextScaled = true
G2L["11"].Name = "CreditsTab"

-- Minimize and Close Buttons
G2L["12"] = Instance.new("TextButton", G2L["4"])
G2L["12"].BorderSizePixel = 0
G2L["12"].BackgroundColor3 = Color3.fromRGB(30, 30, 30)
G2L["12"].AnchorPoint = Vector2.new(0.5, 0.5)
G2L["12"].BackgroundTransparency = 1
G2L["12"].Size = UDim2.new(0, 35, 0, 30)
G2L["12"].Position = UDim2.new(1, -70, 0, 15)
G2L["12"].Text = "-"
G2L["12"].TextColor3 = Color3.fromRGB(255, 255, 255)
G2L["12"].TextScaled = true
G2L["12"].Name = "MinimizeButton"

G2L["13"] = Instance.new("TextButton", G2L["4"])
G2L["13"].BorderSizePixel = 0
G2L["13"].BackgroundColor3 = Color3.fromRGB(30, 30, 30)
G2L["13"].AnchorPoint = Vector2.new(0.5, 0.5)
G2L["13"].BackgroundTransparency = 1
G2L["13"].Size = UDim2.new(0, 35, 0, 30)
G2L["13"].Position = UDim2.new(1, -35, 0, 15)
G2L["13"].Text = "x"
G2L["13"].TextColor3 = Color3.fromRGB(255, 255, 255)
G2L["13"].TextScaled = true
G2L[“13”].Name = “CloseButton”

– Tab Button Functionality
local function showTab(tabName)
G2L[“5”].Visible = tabName == “Home”
G2L[“6”].Visible = tabName == “Scripts”
G2L[“7”].Visible = tabName == “Credits”
end

G2L[“9”].MouseButton1Click:Connect(function()
showTab(“Home”)
end)

G2L[“10”].MouseButton1Click:Connect(function()
showTab(“Scripts”)
end)

G2L[“11”].MouseButton1Click:Connect(function()
showTab(“Credits”)
end)

– Minimize and Close Buttons
local minimized = false

G2L[“13”].MouseButton1Click:Connect(function()
G2L[“1”]:Destroy()
end)

G2L[“12”].MouseButton1Click:Connect(function()
if minimized then
G2L[“2”].Size = UDim2.new(0, 300, 0, 220)
else
G2L[“2”].Size = UDim2.new(0, 300, 0, 50)
end
minimized = not minimized
end)
