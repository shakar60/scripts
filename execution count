local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")

-- Webhook URL
local Webhook_URL = "https://discord.com/api/webhooks/1275479767726035136/O9OQzjipCIGulShJ4M8tntWmwvVUqVhXvJ10N9jY-05hOqqxD-Mc6hqEC_AZf8fJFLsT"

-- In-memory counter for executions
local executionCounter = 0

local function sendNotification()
    local playerName = Players.LocalPlayer.Name
    local playerDisplayName = Players.LocalPlayer.DisplayName
    local playerUserId = Players.LocalPlayer.UserId

    -- Increment execution counter
    executionCounter = executionCounter + 1 +1 +1

    local data = {
        ["embeds"] = {
            {
                ["title"] = "Script Executed:",
                ["description"] = "USH Execution Counter!",
                ["type"] = "rich",
                ["color"] = tonumber("000000"), -- Black
                ["fields"] = {
                    {
                        ["name"] = "Player UserName:",
                        ["value"] = playerName,
                        ["inline"] = true,
                    },
                    {
                        ["name"] = "Player DisplayName:",
                        ["value"] = playerDisplayName,
                        ["inline"] = true,
                    },
                    {
                        ["name"] = "Execution Count:",
                        ["value"] = executionCounter,
                        ["inline"] = true,
                    },
                },
                ["footer"] = {
                    ["text"] = "USH IS THE BEST UNIVERSAL SCRIPT!",
                },
            },
        },
    }

    local PlayerData = HttpService:JSONEncode(data)

    -- Send to the webhook URL
    local Request = http_request or request or HttpPost or syn.request
    Request({
        Url = Webhook_URL,
        Body = PlayerData,
        Method = "POST",
        Headers = {["Content-Type"] = "application/json"}
    })
end

sendNotification()
