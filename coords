-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CordsGUI"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a Frame to contain the coordinate label
local frame = Instance.new("Frame")
frame.Name = "CordsFrame"
frame.Parent = screenGui
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.5
frame.Position = UDim2.new(0.02, 0, 0.02, 0)
frame.Size = UDim2.new(0.15, 0, 0.1, 0)  -- Narrower width
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true

-- Create a title label
local titleLabel = Instance.new("TextLabel")
titleLabel.Name = "TitleLabel"
titleLabel.Parent = frame
titleLabel.BackgroundTransparency = 1
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.Size = UDim2.new(1, 0, 0.2, 0)
titleLabel.Font = Enum.Font.Code
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 18
titleLabel.TextStrokeTransparency = 0.8
titleLabel.Text = "Cords"
titleLabel.TextXAlignment = Enum.TextXAlignment.Center
titleLabel.TextYAlignment = Enum.TextYAlignment.Center

-- Create a TextLabel to display the coordinates
local coordLabel = Instance.new("TextLabel")
coordLabel.Name = "CoordinateLabel"
coordLabel.Parent = frame
coordLabel.BackgroundTransparency = 1
coordLabel.Position = UDim2.new(0, 0, 0.2, 0)
coordLabel.Size = UDim2.new(1, 0, 0.8, 0)
coordLabel.Font = Enum.Font.Code
coordLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
coordLabel.TextSize = 16
coordLabel.TextStrokeTransparency = 0.8
coordLabel.TextXAlignment = Enum.TextXAlignment.Left
coordLabel.TextYAlignment = Enum.TextYAlignment.Top
coordLabel.TextWrapped = true
coordLabel.Text = "X: 0\nY: 0\nZ: 0"

-- Create a close button
local closeButton = Instance.new("TextButton")
closeButton.Name = "CloseButton"
closeButton.Parent = frame
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
closeButton.BorderSizePixel = 0
closeButton.Position = UDim2.new(1, -30, 0, 0)
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Font = Enum.Font.Code
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.TextSize = 14
closeButton.Text = "X"
closeButton.TextStrokeTransparency = 0.8

-- Function to update the coordinates on the label
local function updateCoordinates()
    local character = game.Players.LocalPlayer.Character
    if character and character:FindFirstChild("HumanoidRootPart") then
        local position = character.HumanoidRootPart.Position
        coordLabel.Text = string.format("X: %d\nY: %d\nZ: %d", math.floor(position.X), math.floor(position.Y), math.floor(position.Z))
    end
end

-- Connect the update function to Heartbeat to refresh every frame
game:GetService("RunService").Heartbeat:Connect(function()
    updateCoordinates()
end)

-- Close button functionality
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)
